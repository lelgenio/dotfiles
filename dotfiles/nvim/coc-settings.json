{

    "python.jediEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",

    "coc.preferences.formatOnSaveFiletypes": [
        "python"
    ],

    "languageserver": {
        "vala": {
            "command": "vala-language-server",
            "filetypes": [
                "vala",
                "genie"
            ]
        }
    }
}
