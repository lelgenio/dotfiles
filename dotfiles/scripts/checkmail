#!/bin/sh
set -e

getnew(){
    find ~/.local/share/mail/INBOX{,.{Contas,Faculdade,Git,Trabalhos}}/new -type f | wc -l
}

OLD=$(getnew)

[ "$1" = "update" ] && mbsync -a

NEW=$(getnew)

if [ "$NEW" -gt "$OLD" ];then
    notify-send "Novos Emails!"
fi

echo $NEW | sed 's/^0$//'

if [ "$(ps -o comm= $PPID)" != "waybar" ] && pgrep waybar>/dev/null;then
    pkill -SIGRTMIN+4 waybar
fi

# vim:ft=sh
