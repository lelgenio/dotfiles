#!/bin/sh

BEMENU_BACKEND=wayland
if [ "$1" == "run" ]
then
    j4-dmenu-desktop --dmenu="bmenu -p Iniciar:" --term "$2"
    exit
fi

bemenu \
    --ignorecase\
    --bottom\
    --list 20\
    --prefix '->'\
    --fn "pango:Inter 12"\
    --tb "#222222" --tf "#cc5757" \
    --fb "#202020" --ff "#cccccc" \
    --nb "#202020" --nf "#cccccc" \
    --hb "#303030" --hf "#cc5757" \
    $@
