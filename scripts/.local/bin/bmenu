#!/bin/sh

# BEMENU_BACKEND=x11
# BEMENU_BACKEND=wayland
if [ "$1" == "run" ]
then
    [ -n "$2" ] && t="$2" || t="alacritty"
    exec j4-dmenu-desktop --dmenu="bmenu -p Iniciar:" --term "$t"
fi

bemenu \
    --ignorecase\
    --bottom\
    --list 20\
    --prefix '->'\
    --fn "FiraCode 12"\
    --tb "#242424" --tf "#cc5757" \
    --fb "#242424" --ff "#cccccc" \
    --nb "#202020" --nf "#cccccc" \
    --hb "#303030" --hf "#cc5757" \
    $@
