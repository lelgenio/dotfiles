#!/bin/sh

if [ "$1" == "run" ]
then
    [ -n "$2" ] && t="$2" || t="alacritty"
    exec j4-dmenu-desktop --dmenu="bmenu -p Iniciar:" --term "$t"
fi

# t  title
# f  filter
# n  normal
# h  highlighted
# s  selected
# sc scrollbar

bemenu \
    --ignorecase\
    --bottom\
    --no-overlap\
    --list 20\
    --prefix '->'\
    --fn "FiraCode 12"\
    --tb "#242424" --tf "#cc5757" \
    --fb "#242424" --ff "#cccccc" \
    --nb "#202020" --nf "#cccccc" \
    --hb "#303030" --hf "#cc5757" \
    $@
